<%= form_for(@product) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name, required: true, autofocus: true, placeholder: "Enter product name" %>
  </p>
  <p>
    <%= f.label :price_cents %><br>
    <%= f.number_field :price_cents, required: true %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end